{
  "name": "@mediamonks/muban-transition-component",
  "version": "1.0.1",
  "description": "GreenSock animations for your Muban components.",
  "keywords": [
    "gsap",
    "greensock",
    "animation",
    "transition",
    "components",
    "muban"
  ],
  "author": "Lars van Braam <lars@mediamonks.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mediamonks/transition-component.git"
  },
  "bugs": {
    "url": "https://github.com/mediamonks/transition-component/issues"
  },
  "homepage": "https://github.com/mediamonks/transition-component/tree/main/packages/muban-transition-component#readme",
  "private": false,
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "npm-run-all -s clean build:*",
    "build:ts": "tsc -p ./tsconfig.build.json",
    "build:ts-esm": "tsc -p ./tsconfig.build.esm.json",
    "clean": "rimraf -rf ./dist",
    "test": "jest",
    "lint:eslint": "eslint \"./**/*.{js,jsx,ts,tsx}\"",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "storybook": "storybook dev -p 7000",
    "storybook:build": "storybook build -o ./docs"
  },
  "dependencies": {
    "@mediamonks/core-transition-component": "^1.0.1"
  },
  "devDependencies": {
    "@mediamonks/eslint-config": "^2.0.7",
    "@mediamonks/eslint-config-typescript": "^1.0.9",
    "@mediamonks/eslint-config-typescript-react": "^1.0.11",
    "@storybook/addon-essentials": "^7.0.0-beta.13",
    "@storybook/addon-interactions": "^7.0.0-beta.13",
    "@storybook/addon-links": "^7.0.0-beta.13",
    "@storybook/blocks": "^7.0.0-beta.13",
    "@storybook/react": "^7.0.0-beta.13",
    "@storybook/react-vite": "^7.0.0-beta.13",
    "@storybook/types": "^7.0.0-beta.13",
    "@types/jest": "^29.2.4",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "storybook": "^7.0.0-beta.13",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.4"
  },
  "peerDependencies": {
    "@muban/muban": "^1.0.0-alpha.35",
    "@muban/template": "^1.0.0-alpha.4",
    "gsap": "^3.7.0"
  },
  "eslintConfig": {
    "overrides": [
      {
        "files": [
          "**/*.js"
        ],
        "extends": [
          "@mediamonks/eslint-config"
        ]
      },
      {
        "files": [
          "**/*.jsx"
        ],
        "extends": [
          "@mediamonks/eslint-config",
          "@mediamonks/eslint-config-react"
        ]
      },
      {
        "files": [
          "**/*.ts"
        ],
        "parserOptions": {
          "project": "./tsconfig.json"
        },
        "extends": [
          "@mediamonks/eslint-config",
          "@mediamonks/eslint-config-typescript"
        ]
      },
      {
        "files": [
          "**/*.tsx"
        ],
        "parserOptions": {
          "project": "./tsconfig.json"
        },
        "extends": [
          "@mediamonks/eslint-config",
          "@mediamonks/eslint-config-react",
          "@mediamonks/eslint-config-typescript",
          "@mediamonks/eslint-config-typescript-react"
        ]
      }
    ]
  }
}
