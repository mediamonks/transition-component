{
  "name": "@mediamonks/react-animation",
  "version": "1.4.1",
  "description": "Animation components, hooks, utilities for React + GSAP.",
  "keywords": [
    "react",
    "gsap",
    "animation",
    "hooks"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mediamonks/transition-component.git"
  },
  "bugs": {
    "url": "https://github.com/mediamonks/transition-component/issues"
  },
  "homepage": "https://github.com/mediamonks/transition-component/tree/main/packages/react-animation#readme",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "exports": {
    "import": "./dist/index.js"
  },
  "type": "module",
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "scripts": {
    "lint:eslint": "eslint \"./**/*.{js,jsx,ts,tsx}\"",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "test": "npm-run-all -s test:*",
    "test:jest": "NODE_NO_WARNINGS=1 NODE_OPTIONS=--experimental-vm-modules jest",
    "test:storybook": "concurrently -k -s first \"npm run storybook:build --quiet && npx http-server ./.docs/react-animation --port 6007 --silent\" \"wait-on tcp:6007 && npm run storybook:test\"",
    "build": "npm-run-all -s clean build:*",
    "build:ts": "tsc -p ./tsconfig.build.json",
    "clean": "rimraf -rf ./dist",
    "storybook:dev": "storybook dev -p 6007",
    "storybook:build": "storybook build -o ./.docs/react-animation",
    "storybook:test": "test-storybook --url http://localhost:6007"
  },
  "author": "frontend.monks",
  "license": "MIT",
  "devDependencies": {
    "@gsap/business": "^3.12.2",
    "@jest/globals": "^29.3.1",
    "@mediamonks/eslint-config": "^2.0.6",
    "@mediamonks/eslint-config-react": "^2.1.11",
    "@mediamonks/eslint-config-typescript": "^1.0.8",
    "@mediamonks/eslint-config-typescript-react": "^1.0.10",
    "@storybook/addon-essentials": "^7.4.6",
    "@storybook/addon-interactions": "^7.4.6",
    "@storybook/addon-links": "^7.4.6",
    "@storybook/blocks": "^7.4.6",
    "@storybook/cli": "^7.4.6",
    "@storybook/jest": "^0.2.3",
    "@storybook/react": "^7.4.6",
    "@storybook/react-vite": "^7.4.6",
    "@storybook/testing-library": "^0.2.2",
    "@storybook/types": "^7.4.6",
    "@swc/cli": "^0.1.59",
    "@swc/core": "^1.3.25",
    "@swc/jest": "^0.2.24",
    "@testing-library/react": "^14.1.2",
    "@types/jest": "^29.2.4",
    "@types/react": "^18.0.26",
    "concurrently": "^8.2.1",
    "gsap": "npm:@gsap/business@^3.12.2",
    "http-server": "^14.1.1",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "npm-run-all": "^4.1.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "storybook": "^7.4.6",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "wait-on": "^7.0.1"
  },
  "peerDependencies": {
    "@mediamonks/react-hooks": "^1.2.0",
    "gsap": "npm:@gsap/business@^3.12.2",
    "react": ">=17",
    "react-dom": ">=17"
  },
  "eslintConfig": {
    "extends": [
      "@mediamonks/eslint-config",
      "@mediamonks/eslint-config-react",
      "@mediamonks/eslint-config-typescript",
      "@mediamonks/eslint-config-typescript-react"
    ],
    "parserOptions": {
      "project": "./tsconfig.eslint.json"
    },
    "rules": {
      "@typescript-eslint/no-redundant-type-constituents": "off"
    },
    "overrides": [
      {
        "files": [
          "**/*.stories.tsx",
          "**/*.stories.ts"
        ],
        "rules": {
          "react-hooks/rules-of-hooks": "off",
          "react/jsx-no-literals": "off",
          "react/no-multi-comp": "off"
        }
      }
    ]
  }
}
