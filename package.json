{
  "name": "transition-component",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "lerna run build",
    "test": "lerna run test",
    "lint:eslint": "lerna run lint:eslint",
    "fix:eslint": "lerna run fix:eslint",
    "storybook:build": "storybook build -o ./.docs; lerna run storybook:build",
    "format": "prettier --write \"**/*.{css,html,js,jsx,json,less,md,sass,scss,ts,tsx,vue,yaml}\"",
    "postinstall": "patch-package && husky install source/frontend/.husky"
  },
  "devDependencies": {
    "@mediamonks/prettier-config": "^1.0.1",
    "@playwright/experimental-ct-react": "^1.32.3",
    "@storybook/cli": "^7.0.7",
    "@storybook/react-vite": "^7.0.7",
    "@storybook/types": "^7.0.7",
    "husky": "^8.0.3",
    "lerna": "^6.1.0",
    "lint-staged": "^13.1.0",
    "npm-run-all": "^4.1.5",
    "patch-package": "^6.5.1",
    "prettier": "^2.8.1",
    "storybook": "^7.0.7"
  },
  "lint-staged": {
    "*.{css,html,js,jsx,json,less,md,sass,scss,ts,tsx,vue,yaml}": "prettier --write"
  },
  "prettier": "@mediamonks/prettier-config"
}
