{
  "name": "transition-component",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint:eslint": "npm run lint:eslint --workspaces --if-present",
    "fix:eslint": "npm run fix:eslint --workspaces --if-present",
    "format": "prettier --write \"**/*.{css,html,js,jsx,json,less,md,sass,scss,ts,tsx,vue,yaml}\"",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build -o ./docs"
  },
  "devDependencies": {
    "@mediamonks/prettier-config": "^1.0.1",
    "@storybook/addon-essentials": "^7.0.0-beta.13",
    "@storybook/addon-interactions": "^7.0.0-beta.13",
    "@storybook/addon-links": "^7.0.0-beta.13",
    "@storybook/blocks": "^7.0.0-beta.13",
    "@storybook/cli": "^7.0.0-beta.13",
    "@storybook/react-vite": "^7.0.0-beta.13",
    "@storybook/react": "^7.0.0-beta.13",
    "@storybook/testing-library": "^0.0.13",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1",
    "storybook": "^7.0.0-beta.13"
  },
  "lint-staged": {
    "*.{css,html,js,jsx,json,less,md,sass,scss,ts,tsx,vue,yaml}": "prettier --write"
  },
  "prettier": "@mediamonks/prettier-config"
}
